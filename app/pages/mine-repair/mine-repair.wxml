<view class="container">
    <van-tabs active="{{ active }}" bind:change="onChange" swipeable color="#43CD80">
        <van-tab title="全部">

            <view class="container-card" wx:for="{{repairs}}" wx:for-item="repair">
                <view bindtap="goRepairInfo" data-rid="1">
                    <view class="box-header">
                        <view class="box-header-name">
                            <view class="box-header-bg"></view>
                            <view>{{repair.type}}</view>
                        </view>
                        <view class="box-header-right">{{repair.status}}</view>
                    </view>

                    <view class="box-contain">
                        <view class="box-contain-item">维修单号：<text>{{repair.number}}</text></view>
                        <view class="box-contain-item">报修区域：<text>{{repair.area}}</text></view>
                        <view class="box-contain-item">报修时间：<text>{{repair.create_at}}</text></view>
                    </view>

                    <view class="box-foot">
                        <van-button type="default" round size="small" style="margin-right: 10rpx">撤回此单</van-button>
                        <van-button type="default" round size="small">催单</van-button>
                    </view>
                </view>

            </view>

            <view class="none " wx:if="{{repairs.length==0}}">
                <image src="/images/none.jpg"></image>
                <view>暂无数据</view>
            </view>

        </van-tab>
        <van-tab title="待派单">
            <view class="none ">
                <image src="/images/none.jpg"></image>
                <view>暂无数据</view>
            </view>
        </van-tab>
        <van-tab title="已派单">
            <view class="none ">
                <image src="/images/none.jpg"></image>
                <view>暂无数据</view>
            </view>
        </van-tab>
        <van-tab title="已维修">
            <view class="none ">
                <image src="/images/none.jpg"></image>
                <view>暂无数据</view>
            </view>
        </van-tab>
    </van-tabs>
</view>

